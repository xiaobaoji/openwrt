# 目标系统配置
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# 内核配置
CONFIG_KERNEL_BUILD_USER="fanchmwrt"
CONFIG_KERNEL_BUILD_DOMAIN="github.com"
CONFIG_KERNEL_VERSION="6.6"
CONFIG_KERNEL_PCI=y
CONFIG_KERNEL_USB=y
CONFIG_KERNEL_USB_XHCI_HCD=y
CONFIG_KERNEL_TUN=y  # 适配 Nikki 插件

# 固件配置（1024M 大小 + 兼容 OTA）
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_PARTSIZE=1024
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=256k

# 核心插件（已在脚本中强制启用，此处仅作备份）
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_passwall=y
CONFIG_PACKAGE_geoview=y
CONFIG_PACKAGE_luci-app-nikki=y
CONFIG_PACKAGE_nikki=y
CONFIG_PACKAGE_luci-theme-argon=y
#CONFIG_PACKAGE_docker=n
#CONFIG_PACKAGE_docker-compose=n

# 网络配置
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_dnsmasq_full=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_hostapd-common=y

# 存储配置
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-usb-storage=y
